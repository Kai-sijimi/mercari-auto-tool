{
  "manifest_version": 3,
  "name": "Mercari Assistant",
  "version": "1.0.0",
  "description": "Mercari listing management tool",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://jp.mercari.com/*",
    "https://www.mercari.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://jp.mercari.com/*",
        "https://www.mercari.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
